extends layout

block content
  table.table.table-striped
    thead
        tr
          th
            | #
          th
            | Full Name
          th
            | Email
          th
            | Username
      if (users && users.length > 0)
        tbody
          each u, i in users
            tr
              td
                | #{i+1}
              td
                | #{u.accounts[0].displayName}
              td
                | #{u.accounts[0].emails[0].value}
              td
                | #{u.username}
