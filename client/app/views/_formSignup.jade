        i.icon-google-plus
        | Google
      a.btn.btn-blue(href='/signup-linked-in', title='', tabindex='9')
        i.icon-linked-in
        | LinkedIn
      a.btn.btn-blue(href='/signup-github', title='', tabindex='10')
        i.icon-github
